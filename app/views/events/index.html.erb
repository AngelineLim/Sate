<body>
  <div id = "all-content">
    <div id="events-header">
      <h1><i><strong>Events near you</strong></i></h1>
    </div>
    <div id = "content">
      <div class="events">
      <%- @events.each_slice(3) do |group| %>
          <div class="row">
          <%- group.each do |event| %>
            <div class="col-md-6">
              <img data-src="..." alt="Card image">
              <div class="card card-block">
                <h3 class="card-title"><%= event.name %></h3>
                <h4 class="card-subtitle text-muted">Organised by: <%= event.organisation %></h4>
                <p class="card-text"><%= event.description %></p>
                <a href="/events/<%= event.id %>" class="btn btn-danger">More details</a>
              </div>
            </div>
          <% end %>
      <% end %>
      </div>
    </div>
  </div>
</body>


